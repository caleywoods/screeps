{
  "extends": [
    "tslint-config-airbnb"
  ],
  "rules": {
    "interface-name": [false],
    "max-line-length": [false],
    "no-console": [false],
    "no-namespace": [true, "allow-declarations"],
    "semicolon": [true, "never"],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
